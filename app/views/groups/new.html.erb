<header class="bg-primary text-white fixed-top">
  <nav class="d-flex justify-content-between p-3 align-items-center text-center">   
    <a href='/'><i class="fa-solid fa-arrow-left fs-1 text-white"></i></a>
    <h2 class="m-0 p-0">Create new Category</h2>
      <div class="d-flex  text-decoration-none">
    <% if user_signed_in? %>
      <h3><%= link_to "Sign Out", destroy_user_session_path, data: {
        turbo_method: :delete,
      } ,class:"m-0 p-0 text-decoration-none text-white" %></h3>
    <% else %>
      <h3><%= link_to "Sign In", new_user_session_path, class:"m-0 p-0 text-decoration-none text-white" %></h3>
    <% end %>
  </div>
  </nav> 
</header>


<div class="d-flex flex-column text-center bg-white p-1 m-1">
<%= form_with model: @group, url: groups_path do |form| %>
  <div class="field">
    
    <%= form.text_field :name, placeholder: "Category Name", class: "form-control rounded-0" %>
  </div>
    <div>
 <%= form.label :icon, 'Icon URL', style: 'display: none;' %>

  <%= form.text_field :icon, required: true, placeholder: "Enter the icon url", class: "form-control rounded-0" %>
</div>
  <div class="d-flex flex-column fixed-bottom text-center bg-success w-100 p-3 ">
   <%= form.submit "Save", class:"bg-success text-white"  %> 
  </div>
<% end %>
</div>