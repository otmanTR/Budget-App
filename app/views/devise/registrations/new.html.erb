<h2 class="bg-primary text-white fixed-top text-center">Sign up</h2>
<div class="d-flex flex-column text-center bg-white p-1 m-1">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="field">

    <%= f.text_field :name, placeholder:"Full Name", autofocus: true, autocomplete: "name", placeholder: 'Full Name', class: "input form-control"%>
  </div>

  <div class="field">
    
    <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email",placeholder: 'Email', class: "input form-control rounded-0" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>Password (<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: "input form-control" %>
  </div>

  <div class="field">

    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: "input form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"m-1 bg-primary text-white"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
